        <class>sub_business_tier.entities.TTitle_book</class>
        <class>sub_business_tier.entities.TTitle_book_on_tape</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/Library1"/>
